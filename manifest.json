{
    "manifest_version": 3,
    "name": "Beermonopoly",
    "version": "0.1.1",
    "description": "Add Untappd information to Vinmonopolet",
    "icons": {
        "16": "assets/img/icon16.png",
        "48": "assets/img/icon48.png",
        "128": "assets/img/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "css": [
                "assets/css/styles.css"
            ],
            "js": [
                "assets/js/arrive.min.js",
                "assets/js/sweetalert2.all.min.js",
                "details.js"
            ],
            "matches": [
                "https://*.vinmonopolet.no/*/*/*/p/*"
            ],
            "run_at": "document_end"
        },
        {
            "css": [
                "assets/css/styles.css"
            ],
            "js": [
                "assets/js/arrive.min.js",
                "overview.js"
            ],
            "matches": [
                "https://*.vinmonopolet.no/search/?q=*",
                "https://*.vinmonopolet.no/search?q=*",
                "https://*.vinmonopolet.no/vmp/search/?q=*"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/img/untappd.svg",
                "assets/img/user.svg",
                "assets/img/check-solid.svg"
            ],
            "matches": [
                "https://*.vinmonopolet.no/*"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "identity",
        "storage"
    ],
    "host_permissions": [
        "https://untappd.com/oauth/authorize/*",
        "https://api.beermonopoly.com/auth/*"
    ]
}